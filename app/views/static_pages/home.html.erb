      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="review_form">
        <%= render 'shared/review_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Review Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

